<div class='btn-group col-md-12'>

	<% if idea.can_submit? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :proposed %>
		  <%= f.submit "Propose", :class => 'btn btn-success col-md-3' %>
		<% end %>
	<% end %>

	<% if idea.can_approve? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :approved %>
		  <%= f.submit "Approve", :class => 'btn btn-success col-md-3 ' %>
		<% end %>
	<% end %>

	<% if idea.can_defer? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :deferred %>
		  <%= f.submit "Defer", :class => 'btn btn-primary col-md-3 ' %>
		<% end %>
	<% end %>

	<% if idea.can_decline? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :declined %>
		  <%= f.submit "Decline", :class => 'btn btn-danger col-md-3' %>
		<% end %>
	<% end %>

	<% if idea.can_restart? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :spark %>
		  <%= f.submit "Restart", :class => 'btn btn-info col-md-3 ' %>
		<% end %>
	<% end %>

	<% if idea.can_deliver? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :done %>
		  <%= f.submit "Deliver", :class => 'btn btn-success col-md-3' %>
		<% end %>
	<% end %>

	<% if idea.can_start_work? %>
		<%= simple_form_for idea, :method => :put do |f| %>
		  <%= f.hidden_field :state, :value => :in_development %>
		  <%= f.submit "Start Work", :class => 'btn btn-success col-md-3' %>
		<% end %>
	<% end %>

</div>

