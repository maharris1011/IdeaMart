<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h1>Manta Idea Exchange (IDX)</h1>
          <div class='row'>
      <ul class='list-unstyled'>
          <% @ideas.each do |idea| %>
            <div class='col-md-6 concept-card'>
                <div class='row'>
              <li>
                  <div class='information col-md-9'>
                    <%= link_to idea.high_level_concept, idea, :class=>'title' %><br/>
                    <%= mail_to idea.user.email, idea.user.name %>
                  </div>
                  <div class='actions col-md-3'>
                    <%= link_to edit_idea_path(idea), :class=>'btn btn-success' do %>
                      <i class='glyphicon-edit'></i>
                    <% end %>
                    <%= link_to raw('&times;'), idea, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger' %>
                  </div>
              </li>
                </div>
            </div>
          <% end %>
      </ul>
          </div>
    </div>

    <br/>
    <div class='col-md-12'>
      <%= link_to 'New Idea', new_idea_path, :class => 'btn btn-lg btn-success' %>
    </div>

    <br/>

  </div>
</div>
