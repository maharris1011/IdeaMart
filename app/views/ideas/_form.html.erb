<%= simple_form_for(@idea, html: {class: 'form-horizontal' }) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='inputs'>
    <%= f.input :high_level_concept %>
    <%= f.association :user, :priority => @idea.user , :label_method => :email, :label => "Sponsor" %>
    <%= f.input :customer_segments %>
    <%= f.input :problem %>
    <%= f.input :solution %>
    <%= f.input :unique_value_prop %>
    <%= f.input :key_metrics %>
    <%= f.input :unfair_advantage %>
    <%= f.input :early_adopters %>
    <%= f.input :existing_alternatives %>
    <%= f.input :channels %>
    <%= f.input :cost_structure %>
    <%= f.input :revenue_streams %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Submit Idea",  :class=>'btn btn-success btn-lg' %>
    <%= link_to 'Cancel', ideas_path, :class => 'btn btn-info' %>
  </div>
<% end %>
