<%= simple_form_for(@idea, html: {class: 'form-horizontal' }) do |f| %>

  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>
      <h2><small>See the items in <span style='color:red;'>red</span> and fix them.</small></h2>
    </div>
  <% end %>

  <div class='inputs'>
    <div class='row'>
      <div class='col-md-6'>
        <%= f.input :high_level_concept, :placeholder=>'e.g. YouTube for Books' %>
      </div>
      <div class='col-md-3 col-md-offset-2'>
        <%= f.input :customer_segments, :label=>'For Customers...', hint: 'Who has this problem?', collection: %w(Providers Payers Pharmacists Pharma) %>
      </div>
      <div class='col-md-3'>
        <%= f.association :user, :priority => @idea.user , :label_method => :name, :label => "Created By" %>
      </div>
      <div class='col-md-3 col-md-offset-2'>
        <%= f.input :story_url, :label => 'Story URL' %>
      </div>

    </div>

    <div class='idea-attributes'>
      <div class='row'>
        <div class='col-md-12'>
          <%= f.input :problem, :hint => 'What problem are you trying to solve?', :input_html => { :rows => 10 } %>
        </div>
        <div class='col-md-12'>
          <%= f.input :solution, :hint => 'What is the proposed solution?', :input_html => { :rows => 10 } %>
        </div>
      </div>

      <div class='row'>
        <div class='col-md-4'>
          <%= f.input :unique_value_prop, :placeholder=>'<thing the customer wants> in <some time frame>', :input_html => { :rows => 5 } %>
        </div>
        <div class='col-md-4 col-md-offset-4'>
              <%= f.input :key_metrics, :hint => 'How will you measure success and failure?', :input_html => { :rows => 5 } %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit, "Submit Idea",  :class=>'btn btn-success btn-lg' %>
    <%= link_to 'Cancel', ideas_path, :class => 'btn btn-info' %>
  </div>
<% end %>
