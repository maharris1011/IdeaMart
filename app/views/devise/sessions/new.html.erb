	<div class='container'>
		<div class='row'>
			<div class='col-md-6'>
				<h2>Sign in</h2>

				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				    <%= f.input :email, required: true, autofocus: true %>
				    <%= f.input :password, required: true %>
				    <%= f.input :remember_me, wrapper: :checkbox, inline_label: true, as: :boolean if devise_mapping.rememberable? %>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, "Sign in", class: 'btn btn-success btn-lg' %>
				  </div>
				<% end %>

				<div class='row'>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
