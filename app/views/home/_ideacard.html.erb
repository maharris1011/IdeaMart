<div class='idea-card'>
	<div class='row'>
		<div class='col-md-12'>
			<h3><%= link_to idea.high_level_concept, idea %></h3>
		</div>
		<div class='col-md-12'>
			<h5>By: <%= idea.user.name %></h5>
			<p><%= idea.solution %></p>
		</div>
		<div class='col-md-12'>
			<div class="progress">
			  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
			    <span class="sr-only">40% Complete (success)</span>
			  </div>
			</div>
		</div>
		<div class='col-md-4'>
			<strong>50%</strong><br/>
			<p>funded</p>
		</div>
		<div class='col-md-4'>
			<strong><%= idea.score %></strong><br/>
			<p>points</p>
		</div>
		<div class='col-md-4'>
			<strong>12</strong><br/>
			<p>days to go</p>
		</div>
	</div>
</div>
