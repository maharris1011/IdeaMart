<div class='card idea-card'>
	<div class='card-body'>
		<h3 class='card-title'><%= link_to idea.high_level_concept, idea %></h3>
		<h5 class='card-subtitle'>By: <%= idea.user.name %></h5>
		<p class='card-text'><%= idea.solution %></p>
		<div class="progress">
			<div class="progress-bar bg-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
				<span class="sr-only">40% Complete (success)</span>
			</div>
		</div>
	</div>
	<div class='card-footer'>
		<strong><%= idea.score %></strong><br/>
		<p>points</p>
	</div>
</div>
