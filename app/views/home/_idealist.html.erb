<section class='idealist'>
	<div class='container'>
		<div class="row">
			<h3>Popular Ideas</h3>
			<% @ideas.each do |i| %>
			<div class="col-sm-6 col-md-4">
				<div class='idea-card'>
					<div class='row'>
						<div class='col-md-12'>
							<h3><%= link_to i.high_level_concept, i %></h3>
						</div>
						<div class='col-md-12'>
							<h5>By: <%= i.user.name %></h5>
							<p><%= i.solution %></p>
						</div>
						<div class='col-md-12'>
							<div class="progress">
							  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
							    <span class="sr-only">40% Complete (success)</span>
							  </div>
							</div>
						</div>
						<div class='col-md-4'>
							<strong>50%</strong><br/>
							<p>funded</p>
						</div>
						<div class='col-md-4'>
							<strong><%= i.votes.count %></strong><br/>
							<p>votes</p>
						</div>
						<div class='col-md-4'>
							<strong>12</strong><br/>
							<p>days to go</p>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>

			<div class="row">
			<h3>Newest Ideas</h3>
			<% @new_ideas.each do  |i| %>
			<div class="col-sm-6 col-md-4">
				<div class='idea-card'>
					<div class='row'>
						<div class='col-md-12'>
							<h3><%= i.high_level_concept %></h3>
						</div>
						<div class='col-md-12'>
							<h5>By: <%= i.user.name %></h5>
							<p><%= i.solution %></p>
						</div>
						<div class='col-md-12'>
							<div class="progress">
							  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
							    <span class="sr-only">40% Complete (success)</span>
							  </div>
							</div>
						</div>
						<div class='col-md-4'>
							<strong>50%</strong><br/>
							<p>funded</p>
						</div>
						<div class='col-md-4'>
							<strong>$2543</strong><br/>
							<p>pledged</p>
						</div>
						<div class='col-md-4'>
							<strong>12</strong><br/>
							<p>days to go</p>
						</div>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
	</div>
</section>
