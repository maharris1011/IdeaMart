<section class='idealist'>
	<h3>Popular Ideas</h3>
	<div class="card-deck">
		<% @ideas.each do | i | %>
			<%= render partial: 'ideacard', locals: {:idea => i} %>
		<% end %>
	</div>

	<h3>Newest Ideas</h3>
	<div class="card-deck">
		<% @new_ideas.each do | i | %>
			<%= render partial: 'ideacard', locals: {:idea => i} %>
		<% end %>
	</div>
</section>
