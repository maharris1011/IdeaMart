<div class='row'>
  <div class='col-md-12'>
    &nbsp;
    <% flash.each do |key, value| %>
      <div class='<%= flash_class(key) %> fade in' role='alert' id='notice'>
        <%= value %>
        <button type='button' class='close' data-dismiss='alert'>
          <span>&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>
